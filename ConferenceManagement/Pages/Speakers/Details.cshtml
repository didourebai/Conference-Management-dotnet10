@page
@model ConferenceManagement.Pages.Speakers.DetailsModel
@{
    ViewData["Title"] = Model.Speaker?.FirstName + " " + Model.Speaker?.LastName;
}

@if (Model.Speaker == null)
{
    <div class="alert alert-warning">Speaker not found.</div>
}
else
{
    <h2>@Model.Speaker.FirstName @Model.Speaker.LastName</h2>
    <div class="text-muted">@Model.Speaker.Organization</div>
    <p class="mt-3">@Model.Speaker.Bio</p>

    <h4 class="mt-4">Sessions</h4>
    @if (!Model.Sessions.Any())
    {
        <p>No sessions for this speaker yet.</p>
    }
    else
    {
        <ul class="list-group">
            @foreach (var s in Model.Sessions)
            {
                <li class="list-group-item">
                    <a asp-page="/Program/SessionDetails" asp-route-id="@s.Id">@s.Title</a>
                    <div class="small text-muted">@s.StartTime?.ToLocalTime().ToString("g") â€” @s.Room?.Name</div>
                </li>
            }
        </ul>
    }
}
